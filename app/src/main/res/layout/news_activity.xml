<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="587dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:scrollbars="vertical"
        android:scrollbarSize="12dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/news5"
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:onClick="onButtonClick"
                app:srcCompat="@drawable/news1" />

            <ImageButton
                android:id="@+id/news4"
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:onClick="onButtonClick"
                app:srcCompat="@drawable/news4" />

            <ImageButton
                android:id="@+id/news3"
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:onClick="onButtonClick"
                app:srcCompat="@drawable/news3" />

            <ImageButton
                android:id="@+id/news2"
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:onClick="onButtonClick"
                app:flow_horizontalBias="0.5"
                app:srcCompat="@drawable/news2" />

            <ImageButton
                android:id="@+id/news1"
                android:layout_width="370dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:onClick="onButtonClick"
                app:srcCompat="@drawable/news1" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="13dp"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:clickable="true"
            android:onClick="News"
            android:src="@android:drawable/ic_dialog_info"></ImageButton>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="13dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:onClick="Education"
            android:src="@android:drawable/ic_dialog_map"></ImageButton>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="13dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:onClick="Collection"
            android:src="@android:drawable/ic_dialog_dialer"></ImageButton>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="13dp"
            android:layout_weight="1"
            android:background="@color/purple_500"
            android:clickable="true"
            android:onClick="Profile"
            android:src="@android:drawable/ic_dialog_alert"></ImageButton>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="90dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:text="@string/News"
        android:textSize="35sp"
        android:background="@drawable/tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/reset"
        android:layout_width="80dp"
        android:layout_height="53dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/roun_corn"
        android:clickable="true"
        android:onClick="Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_popup_sync" />

</androidx.constraintlayout.widget.ConstraintLayout>